<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="java.lang.Integer" />
        <import type="de.dixieflatline.mpcw.viewmodels.Player" />

        <variable
            name="player"
            type="de.dixieflatline.mpcw.viewmodels.Player" />
    </data>

    <android.support.wear.widget.BoxInsetLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_grey"
        android:padding="@dimen/box_inset_layout_padding"
        tools:context=".views.PlayerFragment"
        tools:deviceIds="wear">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/inner_frame_layout_padding"
            app:boxedEdges="all">

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:visibleIfNot="@{player.connected}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:visibleIf="@{player.connected}">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:text="@{player.artist}" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="@{player.title}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="bottom|center_horizontal"
                        android:background="@android:drawable/ic_media_previous"
                        app:enableIf="@{player.hasPrevious}" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="bottom|center_horizontal"
                        android:background="@android:drawable/ic_media_play"
                        app:enableIf="@{player.status != Player.EJECT}" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="bottom|center_horizontal"
                        android:background="@android:drawable/ic_media_next"
                        app:enableIf="@{player.hasNext}" />
                </LinearLayout>


            </LinearLayout>
        </FrameLayout>
    </android.support.wear.widget.BoxInsetLayout>
</layout>